.wrapper
  = render "side_bar"
  .main
    .main__header
      .main__header-left
        
        .main__header-left-top
          = @group.name
        .main__header-left-bottom
          Memberï¼š
          = current_user.name
      .main__header-right
        = link_to 'Edit', edit_group_path(@group), class: "main__header-right-btn"
    .main__center
      .main__center-message
        .main__center-message-text
          .messages
            = render partial: 'message', collection: @messages
  
    .main__bottom
      = form_for [@group, @message] do |f|
        .main__bottom-area
          = f.text_field :content, class: "main__bottom-area-text", placeholder: "type a message"
          = f.label :image, class: "main__bottom-area-image-label" do 
            = icon('far', 'image', class: "main__bottom-area-image-icon")
            = f.file_field :image, class: "hidden"
        .main__bottom-text-send
          = f.submit 'Send', class: "main__bottom-text-send-link" 