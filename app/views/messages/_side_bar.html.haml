.chat-side
  .chat-side__header
    .chat-side__header-name-area
      .side__name
        = current_user.name
      .side__icons
        =link_to new_group_path do
          = icon('fas', 'edit', class: "side__icons-color")
          
        =link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "side__icons-color")
        
  - current_user.groups.each do |group|
    .chat-side__message-box
      .box__null
        .box__name
          = link_to group_messages_path (group) do
            .box__name-color
              = group.name 
      .box__message
        = group.show_last_message
      .box__null2
      .box__null3